          <td><%= account_movement.investor.full_name %></td>
          <td><%= account_movement.value_date %></td>
          <td><%= account_movement.movement_date %></td>
          <td><%= account_movement.value %></td>
          <td><%= link_to 'Show', [@investor, account_movement] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
