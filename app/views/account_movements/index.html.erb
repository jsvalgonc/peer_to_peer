    <thead>
      <tr>
        <th>User</th>
        <th>Value date</th>
        <th>Movement date</th>
        <th>Value</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @account_movements.each do |account_movement| %>
