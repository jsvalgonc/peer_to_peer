<p id="notice"><%= notice %></p>

<h1>Listing Account Movements</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Value date</th>
      <th>Movement date</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @account_movements.each do |account_movement| %>
      <tr>
        <td><%= account_movement.user %></td>
        <td><%= account_movement.value_date %></td>
        <td><%= account_movement.movement_date %></td>
        <td><%= account_movement.value %></td>
        <td><%= link_to 'Show', account_movement %></td>
        <td><%= link_to 'Edit', edit_account_movement_path(account_movement) %></td>
        <td><%= link_to 'Destroy', account_movement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

