    <%= f.label :value_date %><br>
    <%= f.date_select :value_date %>
  </div>
  <div class="field">
    <%= f.label :movement_date %><br>
    <%= f.date_select :movement_date %>
  </div>
  <div class="field">
    <%= f.label :value %><br>
    <%= f.text_field :value %>
