<p id="notice"><%= notice %></p>

<%= form_tag investors_search_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Pesquisar", :name => nil %>
  </p>
<% end %>


<h1>Investidores</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Morada</th>
      <th>Codigo Postal</th>
      <th>Localidade</th>
      <th>Pais</th>
      <th>NIF</th>
      <th>Numero Fiscal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investors.each do |investor| %>
      <tr>
        <td><%= investor.full_name %></td>
        <td><%= investor.address %></td>
        <td><%= investor.zip_code %></td>
        <td><%= investor.town %></td>
        <td><%= investor.country %></td>
        <td><%= investor.NIF %></td>
        <td><%= investor.fiscal_number %></td>
        <td><%= link_to 'Mostrar', investor %></td>
        <td><%= link_to 'Editar', edit_investor_path(investor) %></td>
        <td><%= link_to 'Apagar', investor, method: :delete, data: { confirm: 'Confirma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Investidor', new_investor_path %>
