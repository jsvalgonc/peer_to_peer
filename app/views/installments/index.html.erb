<p id="notice"><%= notice %></p>

<h1>Listing Installments</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Value</th>
      <th>Reference date</th>
      <th>Interest</th>
      <th>Capital</th>
      <th>Status</th>
      <th>Process number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @installments.each do |installment| %>
      <tr>
        <td><%= installment.project %></td>
        <td><%= installment.value %></td>
        <td><%= installment.reference_date %></td>
        <td><%= installment.interest %></td>
        <td><%= installment.capital %></td>
        <td><%= installment.status %></td>
        <td><%= installment.process_number %></td>
        <td><%= link_to 'Show', installment %></td>
        <td><%= link_to 'Edit', edit_installment_path(installment) %></td>
        <td><%= link_to 'Destroy', installment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

