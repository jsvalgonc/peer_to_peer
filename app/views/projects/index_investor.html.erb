<p id="notice"><%= notice %></p>

<h1>Projectos</h1>

<table>
  <thead>
    <tr>
      <th>Entrepreneur</th>
      <th>Descrição</th>
      <th>Valor</th>
      <th>Data Inicio</th></th>
      <th>Duração (meses)</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.entrepreneur.full_name %></td>
        <td><%= project.description %></td>
        <td><%= number_to_currency(project.value, :unit => "€") %></td>
        <td><%= project.start_date %></td>
        <td><%= project.duration %></td>
        <td><%= project.status %></td>
        <td><%= link_to 'Selecionar', new_deal_investor_project_path( id_investor: params[:investor_id],id_project: project.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
