<%= render "shared/navbar" %>
<h1 class="titulo">Novo Projecto</h1>

<div class="form_standard">
<%= form_for([@entrepreneur, @project]) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
        <ul>
        <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
    </div>
  <% end %>

<table class="form_table_standard">
  <tr>
    <td> 
      <div class="field">
        <%= f.label :value %>
    </td>
    <td>    
      <%= f.number_field :value %>
        </div>
    </td>
  </tr>
  <tr>
    <td>   
      <div class="field">
        <%= f.label :description %>
    </td>
    <td>    
      <%= f.text_area :description %>
      </div>
    </td>
  </tr>
  <tr>
    <td>   
      <div class="field">
      <%= f.label :start_date %>
    </td>
    <td>    
      <%= f.date_select :start_date %>
      </div>
    </td>
  </tr>
  <tr>
    <td>   
      <div class="field">
        <%= f.label :duration %>
    </td>
    <td>    
      <%= f.number_field :duration %>
        </div>
    </td>
  </tr>
  <tr>
    <td>   
      <div class="field">
      <%= f.label :interest_rate %>
    </td>
    <td>    
      <%= f.number_field :interest_rate , :step => 'any'%>
      </div>
    </td>
  </tr>
  <tr>
    <td>   
    <%=  f.hidden_field :status %>
      </div>
    </td>
  </tr>
  </table>
  <div class="actions">
    <%= f.submit "Registar Projecto"%>
  </div>
<% end %>
</div>