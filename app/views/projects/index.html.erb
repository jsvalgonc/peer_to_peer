<%= render "shared/navbar" %>
<p id="notice"><%= notice %></p>


<h1 class="titulo">Projectos</h1>

<br>
<table class="table_standard">
  <thead>
    <tr>
      <th>Entrepreneur</th>
      <th>Descrição</th>
      <th>Valor</th>
      <th>Data Inicio</th>
      <th>Duração(meses) </th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.entrepreneur.full_name %></td>
        <td><%= project.description %></td>
        <td><%= number_to_currency(project.value, :unit => "€") %></td>
        <td><%= project.start_date %></td>
        <td><%= project.duration %></td>
        <td><%= project.status %></td>
        <td><%= link_to 'Mostrar', project %></td>
        <td><%= link_to 'Editar', edit_project_path(project) %></td>
        <td><%= link_to 'Apagar', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<td><%= link_to 'Principal', main_admin_path %></td>
