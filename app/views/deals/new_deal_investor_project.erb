<%= render "shared/navbar" %>
<h1 class="titulo">Nova Transacção</h1>

<div class="form_standard">
<%= form_for(@deal) do |f| %>
  <% if @deal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@deal.errors.count, "error") %> prohibited this deal from being saved:</h2>
      <ul>
      <% @deal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<table class="form_table_standard">
  <tr>
    <td>  
        <div class="field">
          <strong>Investidor:</strong>
          <%= @deal.investor.full_name %>
      </div>
    </td>
  </tr>
  <tr>
    <td>  
      <div class="field">
        <strong>Projecto:</strong>
        <%=  @deal.project.description %>
      </div>
    </td>
  </tr>
  <tr>
    <td> 
      <div class="field">
        <%= f.label :value %>
    </td>
    <td>    
      <%= f.number_field :value %>
        </div>
    </td>
  </tr>  
</table>  
  <br>
    <%= f.hidden_field :investor_id %>
    <%=  f.hidden_field :project_id %>
  <div class="actions">
    <%= f.submit "Registar"%>
  </div>
<% end %>
</div>

<%= link_to 'Back', deals_path %>
