<p id="notice"><%= notice %></p>

<h1>Listing Deals</h1>

<table>
  <thead>
    <tr>
      <th>Investor</th>
      <th>Project</th>
      <th>Value</th>
      <th>Confirmed</th>
      <th>Confirmation date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deals.each do |deal| %>
      <tr>
        <td><%= deal.investor %></td>
        <td><%= deal.project %></td>
        <td><%= deal.value %></td>
        <td><%= deal.confirmed %></td>
        <td><%= deal.confirmation_date %></td>
        <td><%= link_to 'Show', deal %></td>
        <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
        <td><%= link_to 'Destroy', deal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

